---
interface Props {
  title?: string;
}

const { title = "AquaFlow - Premium Water Supply Solutions" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="Premium water supply solutions for homes and businesses. Experience the difference of pure, fresh water delivered right to your doorstep." />
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  
  body {
    cursor: none;
  }

  @media (max-width: 768px) {
    body {
      cursor: auto;
    }
    .custom-cursor {
      display: none;
    }
  }
</style>